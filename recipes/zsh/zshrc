# If not running interactively, don't do anything!
[[ $- != *i* ]] && return

command -v tmux &> /dev/null \
  && [ -z "${SSH_CLIENT}" ] \
  && [ -z "${SSH_TTY}" ] \
  && [ -z "${TMUX}" ] \
  && exec tmux

export EDITOR="nvim"
export PATH="~/.local/bin:${PATH}"

alias rg="grep --recursive --line-number --color"
alias g="grep --line-number --color"
alias sc="systemctl"
alias jc="journalctl"
